#!/bin/sh
set -e

basic_regex_quote() { printf "%s" "$1" | sed 's/[|\\.*^$[]/\\&/g'; }

print_completion() {
	sort -u \
		| vis-menu -b \
		| sed "s|^$1||" \
		| tr -d '\n'
}

PATTERN=""
COMPLETE_WORD=0
FIND_FILE_LIMIT=1000

while [ $# -gt 0 ]; do
	case "$1" in
	-h|--help)
		echo "usage: $(basename "$0") [-h] [--file|--word] [pattern]"
		exit 0;
		;;
	--file)
		shift
		;;
	--word)
		COMPLETE_WORD=1
		shift
		;;
	*)
		PATTERN="$1"
		break
		;;
	esac
done

if [ $COMPLETE_WORD = 1 ]; then
	tr -cs '[:alnum:]_' '\n' \
		| grep "^$PATTERN." \
		| print_completion "$PATTERN"
else
	# Quote pattern to avoid problems with sed.
	QPATTERN=$(basic_regex_quote "$PATTERN")

	find "$PATTERN"* \
		-name '.*' -prune \
		-print 2>/dev/null \
		| head -n $FIND_FILE_LIMIT \
		| sed "s|^$(dirname "$QPATTERN".)/||" \
		| print_completion "${QPATTERN##*/}"
fi
